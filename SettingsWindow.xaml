<Window x:Class="EnshroudedPlanner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Height="240" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Updates" Grid.Row="0" Padding="10">
            <CheckBox x:Name="ChkUpdatesOnStart"
                      Content="Beim Start nach Updates suchen"/>
        </GroupBox>

        <GroupBox Header="Design (später)" Grid.Row="1" Padding="10" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="Theme:" Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbTheme" SelectedIndex="0">
                    <ComboBoxItem Content="System"/>
                    <ComboBoxItem Content="Hell (in Bearbeitung)"/>
                    <ComboBoxItem Content="Dunkel (in Bearbeitung)"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Content="OK" IsDefault="True" Click="Ok_Click"/>
            <Button Width="90" Content="Abbrechen" IsCancel="True" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
